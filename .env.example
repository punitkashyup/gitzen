# ==============================================
# Gitzen Development Environment Configuration
# ==============================================
# Copy this file to .env and update values
# DO NOT commit .env file to git

# ==============================================
# APPLICATION
# ==============================================
APP_ENV=development
DEBUG=true
APP_NAME=Gitzen

# ==============================================
# POSTGRESQL DATABASE
# ==============================================
POSTGRES_USER=gitzen
POSTGRES_PASSWORD=gitzen_dev_password
POSTGRES_DB=gitzen
POSTGRES_PORT=5432

# Database URL (auto-constructed from above)
# DATABASE_URL=postgresql://gitzen:gitzen_dev_password@postgres:5432/gitzen

# ==============================================
# REDIS
# ==============================================
REDIS_PASSWORD=gitzen_redis_password
REDIS_PORT=6379

# Redis URL (auto-constructed from above)
# REDIS_URL=redis://:gitzen_redis_password@redis:6379/0

# ==============================================
# API BACKEND
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000

# ==============================================
# FRONTEND
# ==============================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Gitzen
NODE_ENV=development

# ==============================================
# AUTHENTICATION - JWT
# ==============================================
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# AUTHENTICATION - GITHUB OAUTH
# ==============================================
# Create GitHub OAuth App at: https://github.com/settings/developers
# Set callback URL to: http://localhost:8000/auth/github/callback

GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:8000/auth/github/callback

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================
# GITLEAKS CONFIGURATION
# ==============================================
GITLEAKS_VERSION=8.18.0

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO

# ==============================================
# NOTIFICATIONS (Optional)
# ==============================================
# Slack
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Email (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Email (AWS SES)
AWS_SES_REGION=
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=

# ==============================================
# PRODUCTION SETTINGS (For reference only)
# ==============================================
# These should be set in production environment
# DO NOT use development values in production!

# PRODUCTION_DATABASE_URL=postgresql://user:password@db-host:5432/dbname
# PRODUCTION_REDIS_URL=redis://:password@redis-host:6379/0
# PRODUCTION_JWT_SECRET=<strong-random-secret>
# PRODUCTION_CORS_ORIGINS=https://yourdomain.com
